{
  "name": "VoiceSelectionCompactUI",
  "displayName": "Voice Selection - Compact UI",
  "description": "Compact voice selection interface with 40% smaller UI elements",
  "components": {
    "mainContainer": {
      "type": "container",
      "style": {
        "background": "#111827",
        "padding": "12px",
        "borderRadius": "8px",
        "maxWidth": "1200px"
      },
      "components": [
        {
          "type": "text",
          "id": "title",
          "value": "🎤 Select Your AI Voice",
          "style": {
            "fontSize": "18px",
            "fontWeight": "bold",
            "color": "#ffffff",
            "textAlign": "center",
            "marginBottom": "8px"
          }
        },
        {
          "type": "container",
          "id": "searchFilterContainer",
          "style": {
            "marginBottom": "8px",
            "display": "flex",
            "flexDirection": "column",
            "gap": "4px"
          },
          "components": [
            {
              "type": "textInput",
              "id": "voiceSearch",
              "placeholder": "Search voices by name, style, or description...",
              "style": {
                "fontSize": "12px",
                "padding": "4px 8px",
                "background": "#1f2937",
                "border": "1px solid rgba(255,255,255,0.1)",
                "borderRadius": "4px",
                "color": "#ffffff"
              }
            },
            {
              "type": "buttonGroup",
              "id": "providerFilters",
              "buttons": [
                {
                  "text": "All Providers (43)",
                  "value": "all",
                  "style": {
                    "fontSize": "12px",
                    "padding": "4px 8px",
                    "background": "#7c3aed",
                    "color": "#ffffff"
                  }
                },
                {
                  "text": "🤖 OpenAI (11)",
                  "value": "openai",
                  "style": {
                    "fontSize": "12px",
                    "padding": "4px 8px",
                    "background": "#374151",
                    "color": "#ffffff"
                  }
                },
                {
                  "text": "🎙️ ElevenLabs (24)",
                  "value": "elevenlabs",
                  "style": {
                    "fontSize": "12px",
                    "padding": "4px 8px",
                    "background": "#374151",
                    "color": "#ffffff"
                  }
                },
                {
                  "text": "🌐 Google AI (8)",
                  "value": "google",
                  "style": {
                    "fontSize": "12px",
                    "padding": "4px 8px",
                    "background": "#374151",
                    "color": "#ffffff"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "container",
          "id": "demoStatusContainer",
          "style": {
            "padding": "8px",
            "background": "rgba(59, 130, 246, 0.1)",
            "border": "1px solid rgba(59, 130, 246, 0.3)",
            "borderRadius": "4px",
            "marginBottom": "8px"
          },
          "components": [
            {
              "type": "text",
              "value": "🎯 Voice Demos Generated For:",
              "style": {
                "fontSize": "12px",
                "fontWeight": "600",
                "color": "#60a5fa",
                "marginBottom": "4px"
              }
            },
            {
              "type": "text",
              "id": "demoContext",
              "value": "Topic: {{userInput.description}}\nTone: {{userInput.tone}}\nPlatforms: {{userInput.platforms}}",
              "style": {
                "fontSize": "12px",
                "color": "#d1d5db",
                "whiteSpace": "pre-line"
              }
            }
          ]
        },
        {
          "type": "listView",
          "id": "voiceList",
          "data": "{{voicesData}}",
          "itemHeight": 80,
          "style": {
            "maxHeight": "400px",
            "overflowY": "auto"
          },
          "itemTemplate": {
            "type": "container",
            "style": {
              "padding": "8px",
              "background": "#1f2937",
              "border": "1px solid rgba(255,255,255,0.1)",
              "borderRadius": "4px",
              "marginBottom": "8px",
              "cursor": "pointer"
            },
            "components": [
              {
                "type": "text",
                "value": "{{item.name}}",
                "style": {
                  "fontSize": "14px",
                  "fontWeight": "600",
                  "color": "#ffffff",
                  "marginBottom": "2px"
                }
              },
              {
                "type": "text",
                "value": "{{item.style}} • {{item.description}}",
                "style": {
                  "fontSize": "12px",
                  "color": "#9ca3af",
                  "marginBottom": "4px"
                }
              },
              {
                "type": "button",
                "text": "Preview",
                "action": "{{previewVoice(item.id)}}",
                "style": {
                  "fontSize": "12px",
                  "padding": "2px 8px",
                  "background": "#7c3aed",
                  "color": "#ffffff",
                  "borderRadius": "4px"
                }
              }
            ]
          }
        },
        {
          "type": "container",
          "id": "actionButtons",
          "style": {
            "display": "flex",
            "gap": "8px",
            "marginTop": "12px"
          },
          "components": [
            {
              "type": "button",
              "text": "Back to Script",
              "action": "{{navigateBack()}}",
              "style": {
                "flex": 1,
                "padding": "6px 12px",
                "fontSize": "14px",
                "background": "#374151",
                "color": "#ffffff",
                "borderRadius": "4px"
              }
            },
            {
              "type": "button",
              "text": "Generate Voice",
              "action": "{{generateVoice()}}",
              "disabled": "{{!selectedVoice}}",
              "style": {
                "flex": 1,
                "padding": "6px 12px",
                "fontSize": "14px",
                "background": "linear-gradient(to right, #7c3aed, #ec4899)",
                "color": "#ffffff",
                "borderRadius": "4px",
                "fontWeight": "600"
              }
            }
          ]
        }
      ]
    }
  },
  "customCSS": ":root {\n  font-size: 60%;\n}\n\n/* Compact UI Overrides */\n.retool-container * {\n  font-size: inherit;\n}\n\ninput, textarea, select {\n  padding: 4px 8px !important;\n  font-size: 12px !important;\n}\n\nbutton {\n  padding: 4px 12px !important;\n  font-size: 12px !important;\n}\n\n/* Custom scrollbar */\n::-webkit-scrollbar {\n  width: 8px;\n}\n\n::-webkit-scrollbar-track {\n  background: #111827;\n}\n\n::-webkit-scrollbar-thumb {\n  background: #374151;\n  border-radius: 4px;\n}",
  "queries": [
    {
      "name": "getVoices",
      "type": "restapi",
      "method": "GET",
      "url": "/api/voices",
      "transformer": "return data.voices.map(voice => ({\n  ...voice,\n  displayName: `${voice.name} (${voice.provider})`,\n  isGoogle: voice.provider === 'Google',\n  isOpenAI: voice.provider === 'OpenAI',\n  isElevenLabs: voice.provider === 'ElevenLabs'\n}))"
    },
    {
      "name": "previewVoice",
      "type": "restapi",
      "method": "POST",
      "url": "/api/voice-preview",
      "body": {
        "voiceId": "{{voiceId}}",
        "demoText": "{{demoText}}",
        "voiceInstruction": "{{voiceInstruction}}"
      }
    }
  ],
  "state": {
    "selectedVoice": null,
    "activeProvider": "all",
    "searchQuery": "",
    "voiceInstruction": "",
    "userInput": {
      "description": "Testing the new compact UI with Google AI Studio voices",
      "tone": "Educational",
      "platforms": ["YouTube"],
      "duration": 30
    }
  },
  "googleVoices": [
    {
      "id": "google_zephyr",
      "name": "Zephyr",
      "provider": "Google",
      "gender": "Female",
      "style": "Bright",
      "description": "Bright and cheerful voice"
    },
    {
      "id": "google_puck",
      "name": "Puck",
      "provider": "Google",
      "gender": "Male",
      "style": "Upbeat",
      "description": "Upbeat and energetic voice"
    },
    {
      "id": "google_isla",
      "name": "Isla",
      "provider": "Google",
      "gender": "Female",
      "style": "Expressive",
      "description": "Expressive and dynamic voice"
    },
    {
      "id": "google_echo",
      "name": "Echo",
      "provider": "Google",
      "gender": "Male",
      "style": "Professional",
      "description": "Professional and clear voice"
    },
    {
      "id": "google_orbit",
      "name": "Orbit",
      "provider": "Google",
      "gender": "Neutral",
      "style": "Futuristic",
      "description": "Modern futuristic voice"
    },
    {
      "id": "google_nova",
      "name": "Nova (Google)",
      "provider": "Google",
      "gender": "Female",
      "style": "Warm",
      "description": "Warm and friendly voice"
    },
    {
      "id": "google_sage",
      "name": "Sage",
      "provider": "Google",
      "gender": "Neutral",
      "style": "Wise",
      "description": "Wise and thoughtful voice"
    },
    {
      "id": "google_luna",
      "name": "Luna",
      "provider": "Google",
      "gender": "Female",
      "style": "Dreamy",
      "description": "Soft and dreamy voice"
    }
  ]
}