# Server Configuration
PORT=3006
BACKEND_PORT=3003
NODE_ENV=development

# API Keys
GOOGLE_AI_API_KEY=your_google_ai_studio_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Stock Media APIs
PEXELS_API_KEY=your_pexels_api_key_here
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Storage Configuration (for generated assets)
STORAGE_TYPE=local
# For cloud storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Database (optional for user sessions)
DATABASE_URL=postgresql://user:password@localhost:5432/social_ai_pro

# Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
VITE_API_URL=http://localhost:3003
VITE_APP_NAME=Social AI Pro
VITE_GA_TRACKING_ID=your_google_analytics_id